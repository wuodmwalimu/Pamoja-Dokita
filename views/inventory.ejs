                        <td><%= item.donationID %></td>
                        <td><%= item.bloodGroup %> <%= item.rhesusFactor %></td>
                        <td><%= item.donationDate %></td>
                        <td><%= item.donationVolume %> ml</td>
                        <td><%= item.donationType %></td>
