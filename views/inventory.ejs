    <!-- JavaScript for Interactivity -->
    <script>
        // Modal functionality
        const modal = document.getElementById("releaseModal");
        const btn = document.getElementById("releaseDonationBtn");
        const span = document.getElementsByClassName("close")[0];

        // Open the modal
        btn.onclick = function () {
            modal.style.display = "block";
        };

        // Close the modal when the "X" is clicked
        span.onclick = function () {
            modal.style.display = "none";
        };

        // Close the modal if the user clicks outside of the modal content
        window.onclick = function (event) {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        };

        // Form submission logic with blood group matching check
        document.getElementById("releaseForm").addEventListener("submit", async (e) => {
            e.preventDefault(); // Prevent default form submission

            const bloodUnitSelect = document.getElementById("bloodUnitSelect");
            const approvedRequestSelect = document.getElementById("approvedRequestSelect");

            // Get selected blood unit and request details
            const selectedBloodUnit = bloodUnitSelect.options[bloodUnitSelect.selectedIndex];
            const selectedApprovedRequest = approvedRequestSelect.options[approvedRequestSelect.selectedIndex];

            // Get the blood group data attributes from both dropdowns
            const bloodUnitBloodGroup = selectedBloodUnit.getAttribute("data-blood-group");
            const approvedRequestBloodGroup = selectedApprovedRequest.getAttribute("data-blood-group");

            // Compare blood group and blood type
            if (bloodUnitBloodGroup !== approvedRequestBloodGroup) {
                alert("The blood group of the selected donation does not match the approved request. Please select matching blood groups.");
                return; // Prevent form submission if blood groups don't match
            }

            // Create the data object to send as JSON
            const data = {
                bloodUnitID: bloodUnitSelect.value, // Using the id as the primary key for blood unit
                approvedRequestID: approvedRequestSelect.value // Using the id as the primary key for approved request
            };

            try {
                // Send the data to the server as JSON
                const response = await fetch('/release-donation', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }, // Set content type to JSON
                    body: JSON.stringify(data) // Send the data as a JSON string
                });

                // Get the server's response message
                const result = await response.json();
                alert(result.message);

                // Handle the response
                if (result.success) {
                    window.location.reload(); // Reload the page if the release was successful
                } else {
                    alert(result.error || 'An error occurred.');
                }

            } catch (error) {
                alert("An error occurred while releasing the donation. Please try again.");
                console.error(error);
            }
        });

        // Add event listeners for buttons
        document.querySelectorAll('.process-btn').forEach(button => {
            button.addEventListener('click', function () {
                const requestId = this.getAttribute('data-request-id');
                alert(`Processing request with ID: ${requestId}`);
                // Add your logic to process the request here
            });
        });

        document.querySelectorAll('.cancel-btn').forEach(button => {
            button.addEventListener('click', function () {
                const requestId = this.getAttribute('data-request-id');
                alert(`Canceling request with ID: ${requestId}`);
                // Add your logic to cancel the request here
            });
        });
    </script>

