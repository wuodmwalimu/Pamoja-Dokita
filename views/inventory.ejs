    <!-- Release Donation Section -->
    <div class="card">
        <h2><i class="fas fa-check-double"></i> Release Donation</h2>
        <button id="releaseDonationBtn">Release Donation</button>

        <!-- Release Donation Modal -->
        <div id="releaseModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h3>Select Donation and Request to Release</h3>
                <form id="releaseForm">
                    <label><b>Donation Record:</b></label>
                    <select name="bloodUnitID" required id="bloodUnitSelect">
                        <% trial5.forEach(record => { %>
                        <option value="<%= record.id %>" data-blood-group="<%= record.bloodGroup %>">
                            <%= record.bloodGroup %> - <%= record.donationType %> (Expires: <%= record.expirationDate %>)
                        </option>
                        <% }); %>
                    </select>

                    <label><b>Approved Request:</b></label>
                    <select name="approvedRequestID" required id="approvedRequestSelect">
                        <% approvedRequests.forEach(request => { %>
                        <option value="<%= request.id %>" data-blood-group="<%= request.bloodType %>">
                            <%= request.recipientName %> - <%= request.bloodType %> (Hospital: <%= request.hospital %>)
                        </option>
                        <% }); %>
                    </select>

                    <button type="submit">Confirm Release</button>
                </form>
            </div>
        </div>
    </div>

