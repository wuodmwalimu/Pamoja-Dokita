<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- HTML for the Charts -->
<div style="width: 80%; margin: 0 auto;">
    <canvas id="completionTrendsChart"></canvas>
</div>
<div style="width: 80%; margin: 40px auto;">
    <canvas id="bloodGroupChart"></canvas>
</div>
<div style="width: 80%; margin: 40px auto;">
    <canvas id="donationTypeChart"></canvas>
</div>

<!-- JavaScript to Extract Data and Render Charts -->
<script>
    // Function to extract data from the table
    function extractDataFromTable() {
        const table = document.getElementById("completedRequestsTable");
        const rows = table.querySelectorAll("tbody tr");
        const data = {
            dates: [], // For completion trends over time
            bloodGroups: {}, // For counts per blood group
            donationTypes: {}, // For counts per donation type
        };

        rows.forEach((row) => {
            const cells = row.querySelectorAll("td");

            // Extract relevant data
            const releaseDate = cells[10].textContent.trim(); // Release Date column
            const bloodGroup = cells[2].textContent.trim(); // Blood Group column
            const donationType = cells[3].textContent.trim(); // Donation Type column

            // Add to dates array
            if (!data.dates.includes(releaseDate)) {
                data.dates.push(releaseDate);
            }

            // Count blood groups
            if (!data.bloodGroups[bloodGroup]) {
                data.bloodGroups[bloodGroup] = 0;
            }
            data.bloodGroups[bloodGroup]++;

            // Count donation types
            if (!data.donationTypes[donationType]) {
                data.donationTypes[donationType] = 0;
            }
            data.donationTypes[donationType]++;
        });

        return data;
    }

    // Function to render the completion trends chart
    function renderTrendsChart(data) {
        const ctx = document.getElementById("completionTrendsChart").getContext("2d");
        new Chart(ctx, {
            type: "line",
            data: {
                labels: data.dates,
                datasets: [
                    {
                        label: "Completed Requests",
                        data: data.dates.map((date) =>
                            data.dates.filter((d) => d === date).length
                        ),
                        borderColor: "#d32f2f",
                        backgroundColor: "rgba(211, 47, 47, 0.2)",
                        fill: true,
                    },
                ],
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: "Completion Trends Over Time",
                        font: { size: 18 },
                    },
                },
                scales: {
                    x: { title: { display: true, text: "Release Date" } },
                    y: { title: { display: true, text: "Number of Completions" }, beginAtZero: true },
                },
            },
        });
    }

    // Function to render the blood group chart
    function renderBloodGroupChart(data) {
        const ctx = document.getElementById("bloodGroupChart").getContext("2d");
        new Chart(ctx, {
            type: "bar",
            data: {
                labels: Object.keys(data.bloodGroups),
                datasets: [
                    {
                        label: "Number of Completions",
                        data: Object.values(data.bloodGroups),
                        backgroundColor: [
                            "#d32f2f",
                            "#1976d2",
                            "#388e3c",
                            "#fbc02d",
                        ],
                        borderColor: [
                            "#b71c1c",
                            "#1565c0",
                            "#2e7d32",
                            "#f9a825",
                        ],
                        borderWidth: 1,
                    },
                ],
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: "Completion Counts by Blood Group",
                        font: { size: 18 },
                    },
                },
                scales: {
                    x: { title: { display: true, text: "Blood Group" } },
                    y: { title: { display: true, text: "Number of Completions" }, beginAtZero: true },
                },
            },
        });
    }

    // Function to render the donation type chart
    function renderDonationTypeChart(data) {
        const ctx = document.getElementById("donationTypeChart").getContext("2d");
        new Chart(ctx, {
            type: "bar",
            data: {
                labels: Object.keys(data.donationTypes),
                datasets: [
                    {
                        label: "Number of Completions",
                        data: Object.values(data.donationTypes),
                        backgroundColor: [
                            "#d32f2f",
                            "#1976d2",
                            "#388e3c",
                            "#fbc02d",
                        ],
                        borderColor: [
                            "#b71c1c",
                            "#1565c0",
                            "#2e7d32",
                            "#f9a825",
                        ],
                        borderWidth: 1,
                    },
                ],
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: "Completion Counts by Donation Type",
                        font: { size: 18 },
                    },
                },
                scales: {
                    x: { title: { display: true, text: "Donation Type" } },
                    y: { title: { display: true, text: "Number of Completions" }, beginAtZero: true },
                },
            },
        });
    }

    // Extract data and render charts
    document.addEventListener("DOMContentLoaded", () => {
        const data = extractDataFromTable();
        renderTrendsChart(data);
        renderBloodGroupChart(data);
        renderDonationTypeChart(data);
    });
</script>
                      
                      
                      
                      
                      
                      
                      
                      
                      
