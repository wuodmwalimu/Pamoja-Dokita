        <input type="text" id="searchInput" placeholder="Search...">
    </div>

    <!-- Completed Requests Table -->
    <div class="table-container">
        <table id="completedRequestsTable">
            <thead>
                <tr>
                    <th>ID <i class="fas fa-sort"></i></th>
                    <th>Blood Unit ID <i class="fas fa-sort"></i></th>
                    <th>Blood Group <i class="fas fa-sort"></i></th>
                    <th>Donation Type <i class="fas fa-sort"></i></th>
                    <th>Expiration Date <i class="fas fa-sort"></i></th>
                    <th>Recipient Name <i class="fas fa-sort"></i></th>
                    <th>Recipient Blood Type <i class="fas fa-sort"></i></th>
                    <th>Hospital <i class="fas fa-sort"></i></th>
                    <th>Doctor <i class="fas fa-sort"></i></th>
                    <th>Approved Date <i class="fas fa-sort"></i></th>
                    <th>Release Date <i class="fas fa-sort"></i></th>
                </tr>
            </thead>
            <tbody>
                <% if (completedRequests.length > 0) { %>
                    <% completedRequests.forEach((request) => { %>
                        <tr>
                            <td><%= request.id %></td>
                            <td><%= request.bloodUnitID %></td>
                            <td><%= request.bloodGroup %></td>
                            <td><%= request.donationType %></td>
                            <td><%= request.expirationDate %></td>
                            <td><%= request.recipientName %></td>
                            <td><%= request.recipientBloodType %></td>
                            <td><%= request.hospital %></td>
                            <td><%= request.doctor %></td>
                            <td><%= request.approvedDate %></td>
                            <td><%= request.releaseDate %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="11">No completed requests found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

