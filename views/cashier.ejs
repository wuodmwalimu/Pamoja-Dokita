    <script>
        document.addEventListener("DOMContentLoaded", function () {
            setupPagination("pending-table", 5, "pending-pagination");
            setupPagination("cleared-table", 5, "cleared-pagination");
        });

        function setupPagination(tableId, rowsPerPage, paginationId) {
            let table = document.getElementById(tableId);
            let rows = table.getElementsByTagName("tbody")[0].getElementsByTagName("tr");
            let totalPages = Math.ceil(rows.length / rowsPerPage);
            let pagination = document.getElementById(paginationId);

            function showPage(page) {
                for (let i = 0; i < rows.length; i++) {
                    rows[i].style.display = (i >= (page - 1) * rowsPerPage && i < page * rowsPerPage) ? "" : "none";
                }
            }

            function createPaginationButtons() {
                pagination.innerHTML = "";
                for (let i = 1; i <= totalPages; i++) {
                    let btn = document.createElement("button");
                    btn.textContent = i;
                    btn.onclick = () => showPage(i);
                    pagination.appendChild(btn);
                }
            }

            if (totalPages > 1) createPaginationButtons();
            showPage(1);
        }
    </script>
  
  
