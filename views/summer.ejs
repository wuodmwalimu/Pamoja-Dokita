function filterDonorsByHospital(hospital) {
    // Assuming trial1Data and trial3Data are available in the page context (e.g., from the server-side)
    const trial1Data = <%= JSON.stringify(trial1Data) %>; // Replace with actual server-side data
    const trial3Data = <%= JSON.stringify(trial3Data) %>; // Replace with actual server-side data

    // Filter function to check if residence matches the logged-in user's hospital
    const filteredTrial1Data = trial1Data.filter(donor => donor.residence === hospital);
    const filteredTrial3Data = trial3Data.filter(donor => donor.residence === hospital);

    // Render filtered data for Trial 1 and Trial 3
    renderDonors(filteredTrial1Data, 'registered-donors');
    renderDonors(filteredTrial3Data, 'unprocessed-donations');
