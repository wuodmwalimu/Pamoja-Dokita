  <script>
    
    
    // Pagination logic for both tables
function setupPagination(tableId, rowsPerPage) {
    let currentPage = 1; // Track the current page
    const tableRows = document.querySelectorAll(`#${tableId} tbody tr`); // Get all rows in the table
    const pageIndicator = document.querySelector(`#${tableId} + .pagination #pageIndicator`); // Page indicator for this table
    const prevButton = document.querySelector(`#${tableId} + .pagination #prevPage`); // Previous button for this table
    const nextButton = document.querySelector(`#${tableId} + .pagination #nextPage`); // Next button for this table

    // Function to update the table display based on the current page
    function updateTable() {
        // Hide all rows
        tableRows.forEach(row => row.style.display = "none");

        // Show rows for the current page
        const start = (currentPage - 1) * rowsPerPage;
        const end = start + rowsPerPage;
        for (let i = start; i < end && i < tableRows.length; i++) {
            tableRows[i].style.display = "";
        }

        // Update the page indicator
        pageIndicator.textContent = `Page ${currentPage}`;

        // Enable/disable Previous and Next buttons
        prevButton.disabled = currentPage === 1;
        nextButton.disabled = currentPage === Math.ceil(tableRows.length / rowsPerPage);
    }

    // Event listener for the Previous button
    prevButton.addEventListener("click", () => {
        if (currentPage > 1) {
            currentPage--;
            updateTable();
        }
    });

    // Event listener for the Next button
    nextButton.addEventListener("click", () => {
        if (currentPage < Math.ceil(tableRows.length / rowsPerPage)) {
            currentPage++;
            updateTable();
        }
    });

    // Initialize the table display
    updateTable();
}

// Set up pagination for both tables
setupPagination("registered-donors", 10); // 5 rows per page for the Registered Donors table
setupPagination("unprocessed-donations", 12); // 5 rows per page for the Unprocessed Donations table
    
                  </script>
