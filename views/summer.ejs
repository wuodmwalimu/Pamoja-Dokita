    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.table-section h2 {
    font-size: 1.5rem;
    margin-bottom: 15px;
    color: #d32f2f;
}

.table-section p {
    margin-bottom: 20px;
    color: #666;
}

/* Scrollable table container (Horizontal only) */
.table-wrapper {
