    color: #fff;
}

table th,
table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
    white-space: nowrap; /* Prevent cell wrapping */
}

/* Sticky headers */
table th {
    background: #d32f2f;
    color: #fff;
    padding: 12px;
    position: sticky;
    top: 0;
    z-index: 2;
}

/* Table rows */
table tbody tr:hover {
    background: #ffebee;
}

table tr:nth-child(even) {
    background: #f2f2f2;
}

/* Pagination */
.dataTables_wrapper .dataTables_paginate {
    margin-top: 20px;
    text-align: center;
}

.dataTables_wrapper .dataTables_paginate .paginate_button {
    padding: 8px 12px;
    margin: 0 5px;
    background: #d32f2f;
    color: #fff !important;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: background 0.3s;
    outline: none;
    display: inline-block;
}

.dataTables_wrapper .dataTables_paginate .paginate_button:hover {
    background: #b71c1c;
}

.dataTables_wrapper .dataTables_paginate .paginate_button.current {
    background: #4caf50;
    color: #fff;
    font-weight: bold;
}

.dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
    background: #ccc;
    color: #666 !important;
    cursor: not-allowed;
}

/* Buttons */
.btn {
    padding: 8px 12px;
    font-size: 0.9rem;
    color: #fff;
    background: #d32f2f;
    border: none;
    border-radius: 5px;
    cursor: pointer;
