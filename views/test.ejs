        <div class="dropdown">
            <a href="#"><i class="fas fa-procedures"></i> Transfusions <i class="fas fa-caret-down"></i></a>
            <div class="dropdown-content">
                <a href="/transfusion-records"><i class="fas fa-notes-medical"></i> Transfusion Records</a>
                <a href="/request"><i class="fas fa-ambulance"></i> Request Blood</a>
