      <!-- Trial 3 - Unprocessed Donations -->
<section class="table-section">
    <h2><i class="fas fa-hourglass-half"></i> Unprocessed Donations</h2>
    <p>These are the donations that have been completed but are yet to be processed.  
       <strong>Click on a donation to begin processing!</strong> You can add more details or update donor information.</p>
    
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th><i class="fas fa-id-badge"></i> ID</th>
                    <th><i class="fas fa-user"></i> Last Name</th>
                    <th><i class="fas fa-user"></i> First Name</th>
                    <th><i class="fas fa-phone"></i> Telephone</th>
                    <th><i class="fas fa-calendar-alt"></i> DOB</th>
                    <th><i class="fas fa-hourglass"></i> Age</th>
                    <th><i class="fas fa-map-marker-alt"></i> Residence</th>
                    <th><i class="fas fa-hand-holding-heart"></i> Donor Type</th>
                    <th><i class="fas fa-calendar-check"></i> Submission Date</th>
                    <th><i class="fas fa-cogs"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Check if trial3Data is defined and has data -->
                <% if (typeof trial3Data !== 'undefined' && trial3Data.length > 0) { %>
                    <% trial3Data.forEach((donor) => { %>
                        <tr>
                            <td><%= donor.id %></td>
                            <td><%= donor.lastName %></td>
                            <td><%= donor.firstName %></td>
                            <td><%= donor.telephone %></td>
                            <td><%= donor.dob %></td>
                            <td><%= donor.age %></td>
                            <td><%= donor.residence %></td>
                            <td><%= donor.donorType %></td>
                            <td><%= donor.submissionDate %></td>
                            <td>
                                <button class="btn btn-process" onclick="openModal('<%= donor.id %>')">
                                    <i class="fas fa-plus"></i> Add Details
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="10">No completed donors in Trial 3.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Pagination Controls (To be implemented later) -->
    <div class="pagination">
        <button id="prevPage" disabled><i class="fas fa-chevron-left"></i> Previous</button>
        <span id="pageInfo">Page 1</span>
        <button id="nextPage">Next <i class="fas fa-chevron-right"></i></button>
    </div>
                      </section>
      
      
      
      

    <!-- Modal for Adding Details -->
    <div id="modal" class="modal">
        <div class="modal-content">
            <h2><i class="fas fa-plus"></i> Add Donation Details</h2>
            <form id="detailsForm" action="/add-to-trial4" method="POST">
                <input type="hidden" id="donorId" name="donorId">

                <!-- Blood Group -->
                <div class="input-group">
                    <i class="fas fa-tint"></i>
                    <select id="bloodGroup" name="bloodGroup" required>
                        <option value="" disabled selected>Select Blood Group</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                </div>

                <!-- Rhesus Factor -->
                <div class="input-group">
                    <i class="fas fa-dna"></i>
                    <select id="rhesusFactor" name="rhesusFactor" required>
                        <option value="" disabled selected>Select Rhesus Factor</option>
                        <option value="Positive">Positive</option>
                        <option value="Negative">Negative</option>
                    </select>
                </div>
<div class="input-group">
    <i class="fas fa-weight"></i>
    <select id="donationVolume" name="donationVolume" required>
        <option value="" disabled selected>Select Donation Volume</option>
        <option value="350">350 ml (Small Volume)</option>
        <option value="450">450 ml (Standard Whole Blood)</option>
        <option value="500">500 ml (Large Volume)</option>
        <option value="600">600 ml (Plasma/Platelets)</option>
        <option value="700">700 ml (High-Volume Apheresis)</option>
    </select>
</div>

                <!-- Hemoglobin Level -->
                <div class="input-group">
                    <i class="fas fa-heartbeat"></i>
                    <input type="number" id="hemoglobinLevel" name="hemoglobinLevel" placeholder="Hemoglobin Level (g/dL)" required>
                </div>

                <!-- Donation Type -->
                <div class="input-group">
                    <i class="fas fa-syringe"></i>
                    <select id="donationType" name="donationType" required>
    <option value="" disabled selected>Select Donation Type</option>
    <option value="Whole Blood Donation">Whole Blood Donation</option>
    <option value="Plasma Donation">Plasma Donation</option>
    <option value="Platelet Donation">Platelet Donation</option>
    <option value="Double Red Cell Donation">Double Red Cell Donation</option>
    <option value="Granulocyte Donation">Granulocyte Donation</option>
    <option value="Autologous Blood Donation">Autologous Blood Donation (for personal use)</option>
    <option value="Directed Blood Donation">Directed Blood Donation (for a specific recipient)</option>
    <option value="Convalescent Plasma Donation">Convalescent Plasma Donation (for recovering patients)</option>
    <option value="Cord Blood Donation">Cord Blood Donation (after childbirth)</option>
    <option value="Peripheral Blood Stem Cell (PBSC) Donation">Peripheral Blood Stem Cell (PBSC) Donation</option>
                  </select>
                </div>

                <!-- Donation Date -->
                <div class="input-group">
                    <i class="fas fa-calendar-alt"></i>
                    <input type="date" id="donationDate" name="donationDate" required>
                </div>

                <!-- Additional Notes -->
                <div class="input-group">
                    <i class="fas fa-sticky-note"></i>
                    <textarea id="notes" name="notes" placeholder="Additional Notes"></textarea>
                </div>

                <!-- Buttons -->
                <div class="input-group">
                    <button type="submit" class="btn">Confirm</button>
                    <button type="button" class="btn btn-cancel" onclick="closeModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

                
                      
